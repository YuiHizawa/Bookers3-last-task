<div class="container">
  <div class="row">
    <div class="col-lg-3">    
      <%= render 'users/userinfo', user: @user %>
      <%= render 'books/new', book: @book %> 
    </div>
    <div class="col-lg-9"> 
      <h2>Users</h2>     
       <table class="table">
          <thead>
            <tr>            
              <th>Image</th>
              <th>Name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              
              <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg",size: "40x40" %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div> 
</div>
