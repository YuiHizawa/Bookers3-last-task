<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/userinfo', user: @user %>
      <%= render 'books/new', book: @book %>       
    </div> 
    <div class="col-lg-9">
       <h2>Books</h2>
       <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>  
      </div>
    </div>   
  </div> 
</div>







