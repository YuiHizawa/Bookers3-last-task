<%= form_for(book, url: books_path) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= book.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <h2>New book</h2>
  <div class="row">
    <div>
      <div class="form-group has-icon">
        <h4>Title</h4>
        <%= f.text_field :title, class:"form-control", placeholder:"Title" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div>
      <h4>Opinion</h4>
      <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"Body" %>
    </div>
  </div>
  <div class="row createbook">
  <%= f.submit "Create Book", class:"btn btn-primary btn-md btn-block btn-base-1 mt-20" %>
  </div>
<% end %>