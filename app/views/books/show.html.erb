<%= form_for(@book, url: books_path) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>New Book</h2>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group has-icon">
        <h4>Title</h4>
        <%= f.text_field :title, class:"form-control", placeholder:"Title" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <h4>Option</h4>
      <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"Body" %>
    </div>
  </div>
  
  <%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>

<% end %>



<div class="col-sm-9">
  <h2>Book2</h2>


  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
