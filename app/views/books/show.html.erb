<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/userinfo', user: @book.user %>
			<%= render 'books/new', book: @book_new %>
		</div>
		<div class="col-xs-9">
		<h2>Book detail</h2>
		 <table class="table">
		    <tbody>
		      <tr>
		        <td><%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %><span><%= link_to @book.user.name, user_path(@book.user_id) %></span></td>
		        <td><%= @book.title %></td>
		        <td><%= @book.body %></td>
		        <% if current_user == @book.user %>
			        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
			        <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
			    <% end %>
		      </tr>
		    </tbody>
		  </table>
		</div>
	</div>
  </div>

