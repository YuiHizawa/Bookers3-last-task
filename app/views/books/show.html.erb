<%= render 'users/userinfo', user: @user %>
<%= render 'books/new', book: @book_new %>

<h2>Book detail</h2>
 <table>
    <tbody>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %><span><%= @user.name %></span></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if current_user == @book.user %>
	        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
	        <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
	    <% end %>
      </tr>
    </tbody>
  </table>

